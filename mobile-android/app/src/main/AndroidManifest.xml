<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.imteaz.mytexttospeech">
    <uses-feature android:name="android.hardware.camera.any" android:required="false"/>

    <queries>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:label="MyTexttoSpeech"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyTexttoSpeech">

        <!-- Our Java screen that speaks text -->
        <activity
            android:name=".SpeakActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Keep the original (Compose) activity registered but NOT launcher -->
        <activity android:name=".MainActivity" />
    </application>

</manifest>
